<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/welcomeFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_welcome_height"
        android:background="@drawable/img_welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_welcome"
            android:padding="@dimen/padding_welcome_dialog"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/fontsize_dialog_welcome"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcomeFrame"
        android:padding="@dimen/padding_welcome_dialog"
        android:text="@string/dialog_message"
        android:textSize="@dimen/fontsize_dialog_message" />

</RelativeLayout>
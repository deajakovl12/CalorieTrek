<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context="foi.hr.calorietrek.ui.login.view.LoginActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/ll_padding"
        tools:context=".MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtPrijava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/btn_sign_in_margin_bottom"
            android:text="@string/login_with"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="@dimen/txt_prijava_x"
            tools:layout_editor_absoluteY="@dimen/txt_prijava_y" />

        <RelativeLayout
            android:layout_width="@dimen/relative_layout_width_login"
            android:layout_height="@dimen/relative_layout_height_login"
            android:layout_marginBottom="@dimen/relative_layout_margin_bottom_fb" >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/btn_fb_left_margin"
                android:layout_marginRight="@dimen/btn_fb_right_margin"
                android:layout_marginTop="@dimen/btn_fb_top_margin"
                android:layout_marginBottom="@dimen/btn_fb_bottom_margin" />

            <ImageView
                android:id="@+id/img_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bg_button_facebook" />

            <TextView
                android:id="@+id/text_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/facebook"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/login_text"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/relative_layout_width_login"
            android:layout_height="@dimen/relative_layout_height_login" >

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:color="@color/transparent"
                android:layout_marginRight="@dimen/btn_google_left_margin"
                android:layout_marginLeft="@dimen/btn_google_right_margin" >

            </com.google.android.gms.common.SignInButton>

            <ImageView
                android:id="@+id/img_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bg_button_google" />

            <TextView
                android:id="@+id/text_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/google"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/login_text"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

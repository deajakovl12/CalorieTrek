<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="foi.hr.calorietrek.ui.login.view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentStart="true">
        <ImageView
            android:src="@drawable/cklogo"
            android:layout_marginTop="@dimen/logo_topmargin"
            android:layout_gravity="center"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtPrijava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prijava korisnika ovdje"
            tools:layout_editor_absoluteX="@dimen/txt_prijava_x"
            tools:layout_editor_absoluteY="@dimen/txt_prijava_y" />

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ll_padding"
        tools:context=".MainActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/btn_sign_in_margin_bottom"
            android:layout_marginTop="@dimen/btn_sign_in_margin_top" />


    </LinearLayout>
</RelativeLayout>
